{
  "compilerOptions": {
    // Base
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,

    // Strict
    "noUncheckedIndexedAccess": true,
    "strict": true,

    // Transpile with TS
    // "module": "NodeNext",
    // "moduleResolution": "NodeNext",
    
    // Transpile without TS
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,

    // DOM ?
    "lib": ["dom", "es2022"],
    
    // no DOM ?
    // "lib": ["es2022"],

    // publish to npm ?
    "declaration": true,

    // publich on monorepo?
    // "declarationMap": true,
    // "sourceMap": true,

    // etc
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@libs/*": ["./src/libs/*"],
      "@styles/*": ["./src/styles/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.js",
    ".jest/setup.ts"
  ]
}
